{% extends 'base.html.twig' %}

{% block title %}Rendez Vous{% endblock %}

{% block body %}
    <h1>Rendez Vous</h1>
    {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
      {{ form_start(form) }}
    <div class="form-row align-items-end" >
        <div class="col">
            {{ form_row(form.userName) }}
        </div>
        <div class="col">
            <div class="form-group">
                <button type="submit" class="btn btn-success">Rechercher</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>User_name</th>
                <th>Lieu</th>
                <th>Date</th>
                <th>Raison</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rendez_vou in rendez_vouses %}
            <tr>
                <td>{{ rendez_vou.id }}</td>
                <td>{{ rendez_vou.userName }}</td>
                <td>{{ rendez_vou.lieu }}</td>
                <td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d') : '' }}</td>
                <td>{{ rendez_vou.raison }}</td>
                <td>
                    <a href="{{ path('rendez_vous_c_r_u_d_show', {'id': rendez_vou.id}) }}" class = "btn btn-check">AFFICHER </a>
                    <a href="{{ path('rendez_vous_c_r_u_d_edit', {'id': rendez_vou.id}) }}" class = "btn btn-dark">EDITER</a>
<!--                    <a href="{{ path('rendez_vous_c_r_u_d_delete', {'id': rendez_vou.id}) }}" class = "btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de supprimer cet article?');">SUPPRIMER</a> -->
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rendez_vous_c_r_u_d_new') }}">Ajouter un rendez_vous</a>
{% endblock %}

